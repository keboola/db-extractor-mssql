{
    "name": "keboola/db-extractor-mssql",
    "license": "MIT",
    "type": "project",
    "description": "Keboola Microsoft SQL DB Writer",
    "authors": [
        {
            "name": "keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "keboola/db-extractor-common": "dev-tf-testing-rf",
        "keboola/php-utils": "^2.3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "keboola/coding-standard": "^2.0",
        "phpstan/phpstan": "^0.8"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbExtractor\\Tests\\": "tests/Keboola/DbExtractor",
            "Keboola\\DbExtractor\\Mssql\\Tests\\": "tests/Mssql"
        }
    },
    "scripts": {
        "tests": "./wait-for-it.sh mssql:1433 -t 30 -- phpunit --testsuite unit",
        "perf": "./wait-for-it.sh mssql:1433 -t 30 -- phpunit --testsuite perf",
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests",
            "@perf"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
